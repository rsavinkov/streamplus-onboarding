{% extends 'base.html.twig' %}

{% block body %}
    <h1>Step 2: Address Information</h1>
    {{ form_start(form) }}
    {{ form_row(form.line1) }}
    {{ form_row(form.line2) }}
    {{ form_row(form.city) }}
    {{ form_row(form.postalCode) }}
    {{ form_row(form.state) }}
    {{ form_row(form.country) }}
    <button type="submit" class="btn btn-primary">Next</button>
    <a href="{{ path('onboarding', {'step': 1}) }}" class="btn btn-secondary">Back</a>
    {{ form_end(form) }}
{% endblock %}